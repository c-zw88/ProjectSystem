    <title>@ViewBag.Title</title>
    <title>无忧管理系统</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background-color: #b9d9e5;
        }

        .age {
            margin-top: 150px;
            background-color: white;
        }

