
@{
    ViewBag.Title = "Punate";
    Layout = "~/Views/Shared/_LayoutPersonal.cshtml";
}
@using Worry_freemanagement.Models;
@model Stafftable
@{
    var cont = 1;
    Stafftable sta = Session["user"] as Stafftable;
    List<punishments> pun = ViewBag.pun as List<punishments>;
}
<h2>奖罚查询</h2>
<form action="/HomePage/Punate" method="post">
    <div>
        <Label>查询：</Label>
        <input type="date" name="Datatime" value="" />
        <input type="submit" name="name" value="查询" />    
    </div>
</form>
<form action="/HomePage/Punate" method="post">
    <table class="table table-bordered table-hover table-condensed table-striped" style="text-align:center;">
        <tr class="active">
            <th style="text-align:center;">编号</th>
            <th style="text-align:center;">员工工号</th>
            <th style="text-align:center;">员工姓名</th>
            <th style="text-align:center;">原因</th>
            <th style="text-align:center;">奖罚日期</th>
            <th style="text-align:center;">奖励内容</th>
            <th style="text-align:center;">操作</th>
        </tr>
        @foreach (var item in pun)
        {
            <tr class="warning">
                <td>@(cont++)</td>
                <td>@item.EmployeeID</td>
                <td>@item.Name</td>
                <td>@item.Reason</td>
                <td>@item.Datatime</td>
                <td>@item.Amount</td>
                <td>
                    <a href="/HomePage/PunateSelelct?id=@item.EventsID" class="btn btn-default btn-primary">查看详情</a>
                </td>
            </tr>
        }
    </table>
</form>
