
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutFreemana.cshtml";
}
@using Worry_freemanagement.Models;
@model List<Wage>

@{
    var cont = 1;
}
<h2>员工工资详情</h2>
<form action="/Recruitment/Index" method="post">
    <table class="table table-bordered table-hover table-condensed table-striped" style="text-align:center;">
        <tr class="active">
            <th style="text-align:center;">编号</th>
            <th style="text-align:center;">员工工号</th>
            <th style="text-align:center;">员工姓名</th>
            <th style="text-align:center;">工资日期</th>
            <th style="text-align:center;">总工资</th>
            <th style="text-align:center;">操作</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="warning">
                <td>@(cont++)</td>
                <td>@item.EmployeeID</td>
                <td>@item.Name</td>
                <td>@item.Real</td>
                <td>
                    <a href="/Recruitment/Delsit?id=@item.ID" class="btn btn-default btn-primary">查看详情</a>
                    <a href="/Recruitment/Hire?id=@item.ID" class="btn btn-default btn-info">予以录用</a>
                </td>
            </tr>
        }
    </table>
</form>


