
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutFreemana.cshtml";
}

<h2>添加员工奖罚信息</h2>
<form action="/punishments/Index" method="post" style="margin-left:30px;">
    <div class="form-group">
        <label style="font-size:18px;">员工姓名：</label>
        <input type="text" name="Name" class="form-control" placeholder="请输入员工姓名" />
    </div>
    <div class="form-group">
        <label style="font-size:18px;">奖罚原因：</label>
        <input type="text" name="Reason" class="form-control" placeholder="请输入奖罚原因" />
    </div>
    <div class="form-group">
        <label style="font-size:18px;">奖罚内容：</label>
        <input type="text" name="Amount" class="form-control" placeholder="请输入奖罚内容" />
    </div>
    <div class="col-lg-12 form-group">
        <input type="submit" name="name" value="添加" class="btn btn-default btn-success" />
    </div>
</form>



