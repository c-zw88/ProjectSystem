
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutFreemana.cshtml";
}

<h2>添加培训内容</h2>
<form action="/Training/Add" method="post">
    <div class="col-lg-6 form-group">
        <label style="font-size:18px;">培训名称：</label>
        <input type="text" name="Nametraining" class="form-control" placeholder="培训名称" />
    </div>
    <div class="col-lg-6 form-group">
        <label style="font-size:18px;">培训地点：</label>
        <input type="text" name="Personnel" class="form-control" placeholder="培训所在地点" />
    </div>
    <div class="col-lg-6 form-group">
        <label style="font-size:18px;">参与人员：</label>
        <input type="text" name="Location" class="form-control" placeholder="参与人员" />
    </div>
    <div class="col-lg-6 form-group" style="margin-top:10px;">
        <label style="font-size:18px;">培训宗旨：</label>
        <input type="text" name="Reason" class="form-control" placeholder="培训宗旨" />
    </div>
    <div class="col-lg-6 form-group">
        <label style="font-size:18px;">培训时间：</label>
        <input type="datetime-local" name="Datatime" class="form-control" />
    </div>
    <div class="col-lg-6 form-group">
        <label style="font-size:18px;">结束时间：</label>
        <input type="datetime-local" name="Datatimes" class="form-control" />
    </div>
    <div class="col-lg-12 form-group">
        <input type="submit" name="name" value="添加" class="btn btn-default btn-success" />
    </div>
</form>

